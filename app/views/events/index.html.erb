
<div class="container mx-auto">

<h1 class="text-indigo-400 text-3xl text-center my-2">Events</h1>
<div class="text-indigo-100 mb-3 flex justify-end">
  <%= link_to 'New Event', new_event_path, class: 'justify-end bg-indigo-500 rounded-full px-4 py-2' %>
</div>

<table class="w-full shadow-lg layout-auto">
  <thead>
    <tr>
      <th class="px-4 py-3">Name</th>
      <th class="px-4 py-3">Description</th>
      <th class="px-4 py-3">Status</th>
      <th class="px-4 py-3">Costing</th>
      <th class="px-4 py-3">Price</th>
      <th class="px-4 py-3">Duration</th>
      <th class="px-4 py-3">Address</th>
      <th colspan="3" class="px-4 py-3"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="w-full font-light text-gray-700 bg-gray-100 whitespace-no-wrap border border-b-0">
        <td class="px-4 py-4"><%= event.name %></td>
        <td class="px-4 py-4"><%= truncate(event.description, length: 50) %></td>
        <td class="px-4 py-4"><%= event.status %></td>
        <td class="px-4 py-4">
          <span class="#{ event.costing.free? ? bg-green-100 : bg-green-400 } px-4 py-2 rounded-full">
          <%= event.costing %>
          </span>
        </td>
        <td class="px-4 py-4"><%= event.price %></td>
        <td class="px-4 py-4"><%= "#{event.duration} hrs" %></td>
        <td class="px-4 py-4"><%= truncate(event.address, length: 25) %></td>
        <td class="px-4 py-4"><%= link_to 'Show', event %></td>
        <td class="px-4 py-4"><%= link_to 'Edit', edit_event_path(event) %></td>
        <td class="px-4 py-4"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

