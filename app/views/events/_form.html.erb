<div class="container mx-auto flex justify-center">
  <div class="text-indigo-400 w-5/12">

    <%= form_with(model: event, local: true) do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanations" class="bg-red-200 text-red-700 px-4 py-2 my-3">
          <h2 class="text-2xl"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="fields">
        <%= form.label :name %>
        <%= form.text_field :name, class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700" %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700" %>
      </div>


      <div class="field">
        <%= form.label :costing %>
        <%= form.select(:costing, Event.costings.keys.map {|cost| [cost.titleize,cost]}, {},class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700") %>
      </div>

      <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price, placeholder: "leave empty for free events", class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700" %>
      </div>

      <div class="field">
        <%= form.label :duration, 'Duration in hours'%>
        <%= form.number_field :duration, class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700" %>
      </div>

      <div class="field">
        <%= form.label :address %>
        <%= form.text_area :address, class: "px-4 py-2 my-2 w-full rounded-lg border text-gray-700" %>
      </div>

      <div class="actions">
        <%= form.submit 'Submit' , class: "px-4 py-2 my-2 text-white bg-indigo-500 rounded-lg w-full" %>
      </div>
    <% end %>
  </div>
</div>