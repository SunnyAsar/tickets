<div class="container mx-auto flex justify-center">
  <div class="w-6/12 px-4 py-2">
    <p id="notice"><%= notice %></p>
<div class="flex justify-between">
<h1 class="text-center text-indigo-300 text-3xl"> <%= @event.name %></h1>
  <div class="flex ">
    <h1 class="text-center text-gray-500 text-2xl"> <%= "#{@event.duration}hrs" %></h1>
    <% unless @event.published? %>
      <%= link_to "Publish", publish_event_path(@event), method: :post, class: "text-lg ml-3 px-6 py-2 bg-green-300 rounded-lg text-white" %>
    <% else %>
      <%= link_to "Unpublish" ,  unpublish_event_path(@event), method: :post, class: "text-lg ml-3 px-6 py-2 bg-indigo-500 rounded-lg text-white" %>
    <% end %>

  </div>
</div>



<div class="my-3 justify-between flex">

  <span class="<%= @event.free? ? 'bg-yellow-200' : 'bg-green-300' %> px-4 py-2 rounded-lg">
    <%= @event.costing %>
  </span>

  <% if @event.paid? %>
    <p>
      <strong>Price:</strong>
      <span class="px-4 py-2 bg-green-100 rounded-lg"> 
        <%= @event.price %>
      </span>
  </p>
  <%end%>

  <p>
    <strong>Status:</strong>
    <%= @event.status %>
  </p>
</div>


<p class="w-full text-gray-700">
  <%= @event.description %>
</p>

<p>
  <strong>Address:</strong>
  <span class="text-2xl text-gray-600">
    <%= @event.address %>
  </span>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>



  </div>

</div>