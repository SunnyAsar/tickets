<!DOCTYPE html>
<html>
  <head>
    <title>Ticket</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: 'shared/nav' %>
    <% flash.each do |name, msg| %>
      <div class="flex justify-between items-center #{name == 'alert' ? bg-red-200 : bg-green-200} relative text-gray-600 py-3 px-3 mt-4 ">
        <div>
          <%= msg %>
        </div>
      </div>      
    <% end %>

    <%= yield %>
  </body>
</html>
